{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["version", "last_updated", "terms"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+$"
    },
    "last_updated": {
      "type": "string",
      "format": "date"
    },
    "terms": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "en"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z_]+$"
          },
          "en": {
            "$ref": "#/definitions/term_entry"
          },
          "ar": {
            "$ref": "#/definitions/term_entry"
          },
          "fr": {
            "$ref": "#/definitions/term_entry"
          }
        }
      }
    }
  },
  "definitions": {
    "term_entry": {
      "type": "object",
      "required": ["term", "definition"],
      "properties": {
        "term": {
          "type": "string",
          "minLength": 1
        },
        "definition": {
          "type": "string",
          "minLength": 1
        },
        "context": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        },
        "examples": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "synonyms": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "source_term": {
          "type": "string"
        },
        "translation_notes": {
          "type": "string"
        }
      }
    }
  }
}
